{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=webstraction_db;User=webstraction_user;Password=webstraction_password;",
    "PostgreSQL": "Host=localhost;Database=webscraper;Username=postgres;Password=postgres",
    "MongoDB": "mongodb://localhost:27017",
    "Redis": "localhost:6379"
  },
  "KeyVault": {
    "Endpoint": "",
    "ClientId": "",
    "ClientSecret": "",
    "TenantId": ""
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "AutoMigrate": true
  },
  "ScraperSettings": {
    "OutputDirectory": "ScrapedData",
    "MaxConcurrentScrapers": 5,
    "DefaultUserAgent": "Mozilla/5.0 WebScraper Bot",
    "EnableMetricsCollection": true,
    "MetricsCollectionIntervalSeconds": 60,
    "EnableWebhooks": true,
    "DefaultWebhookFormat": "json"
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3000",
      "http://localhost:5000",
      "https://localhost:5000"
    ]
  }
}
